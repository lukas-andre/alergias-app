/**
 * AlergiasCL - Global Styles
 *
 * This file contains:
 * 1. Tailwind directives
 * 2. shadcn/ui CSS variables
 * 3. Legacy custom CSS (to be migrated gradually to Tailwind)
 *
 * New components should use Tailwind/shadcn classes.
 * Existing components will be migrated incrementally.
 */
/*---break---
 */
@plugin "tailwindcss-animate";
/*---break---
 */
@custom-variant dark (&:is(.dark *));

/* ==========================================
   TAILWIND DIRECTIVES
   ========================================== */

@tailwind base;
@tailwind components;
@tailwind utilities;

/* ==========================================
   SHADCN/UI & CUSTOM CSS VARIABLES
   ========================================== */

@layer base {
  :root {
    /* shadcn/ui Required Variables (HSL format) */
    --background: 0 0% 100%;
    --foreground: 222 84% 5%;

    --card: 0 0% 100%;
    --card-foreground: 222 84% 5%;

    --popover: 0 0% 100%;
    --popover-foreground: 222 84% 5%;

    /* Primary: Purple/Violet #7C3AED */
    --primary: 258 90% 66%;
    --primary-foreground: 0 0% 100%;

    /* Secondary: Lighter purple for accents */
    --secondary: 258 90% 96%;
    --secondary-foreground: 258 84% 24%;

    /* Muted: Neutral backgrounds */
    --muted: 210 40% 96%;
    --muted-foreground: 215 16% 47%;

    /* Accent: Teal/Mint for scanner */
    --accent: 172 66% 50%;
    --accent-foreground: 0 0% 100%;

    /* Destructive: Red for errors */
    --destructive: 0 84% 60%;
    --destructive-foreground: 0 0% 100%;

    /* Border and Input colors */
    --border: 214 32% 91%;
    --input: 214 32% 91%;
    --ring: 258 90% 66%;

    /* Border radius */
    --radius: 0.5rem;

    /* Legacy Custom Variables (for backward compatibility) */
    --primary-dark: #4C1D95;
    --chip-bg: rgba(124, 58, 237, 0.1);
  }

  .dark {
    --background: 222 84% 5%;
    --foreground: 210 40% 98%;

    --card: 222 47% 11%;
    --card-foreground: 210 40% 98%;

    --popover: 222 47% 11%;
    --popover-foreground: 210 40% 98%;

    --primary: 258 90% 66%;
    --primary-foreground: 0 0% 100%;

    --secondary: 258 84% 24%;
    --secondary-foreground: 258 90% 96%;

    --muted: 217 33% 17%;
    --muted-foreground: 215 20% 65%;

    --accent: 172 66% 50%;
    --accent-foreground: 0 0% 100%;

    --destructive: 0 63% 31%;
    --destructive-foreground: 0 0% 100%;

    --border: 217 33% 17%;
    --input: 217 33% 17%;
    --ring: 258 90% 66%;

    /* Legacy Custom Variables (dark mode) */
    --chip-bg: rgba(94, 234, 212, 0.2);
  }
}

@layer base {
  * {
    @apply border-border;
  }

  body {
    @apply bg-background text-foreground;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
}

/* ==========================================
   LEGACY CUSTOM CSS
   (To be migrated to Tailwind incrementally)
   ========================================== */

html,
body {
  max-width: 100vw;
  overflow-x: hidden;
}

* {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

a {
  color: inherit;
  text-decoration: none;
}

.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

main {
  width: min(960px, 100%);
  margin: 0 auto;
  padding: 48px 20px 64px;
}

.card {
  border: 1px solid rgba(15, 23, 42, 0.12);
  border-radius: 20px;
  padding: 24px;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.helper {
  color: rgba(15, 23, 42, 0.68);
  font-size: 0.95rem;
}

.profile-page {
  display: flex;
  flex-direction: column;
  gap: 28px;
}

.profile-header {
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  justify-content: space-between;
  gap: 20px;
}

.profile-header h1 {
  font-size: 2rem;
}

.header-actions {
  display: flex;
  gap: 12px;
}

.profile-header button {
  border-radius: 999px;
  padding: 10px 18px;
  border: 1px solid rgba(15, 23, 42, 0.18);
  background: transparent;
  font-weight: 500;
  cursor: pointer;
}

.profile-header button:hover {
  background: rgba(124, 58, 237, 0.08);
}

.auth-grid {
  display: grid;
  gap: 20px;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
}

.field {
  display: flex;
  flex-direction: column;
  gap: 6px;
  font-size: 0.95rem;
}

.field input,
.field textarea,
.field select {
  border-radius: 12px;
  border: 1px solid rgba(15, 23, 42, 0.15);
  padding: 10px 12px;
  font-size: 1rem;
  background: rgba(255, 255, 255, 0.95);
}

.field textarea {
  resize: vertical;
}

.checkbox {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  font-size: 0.95rem;
  cursor: pointer;
}

.checkbox input[type="checkbox"] {
  width: 18px;
  height: 18px;
  accent-color: #7C3AED;
}

.auth-grid button,
.wizard-footer .primary {
  border-radius: 999px;
  border: none;
  padding: 12px 24px;
  background: #7C3AED;
  color: #fff;
  font-weight: 600;
  cursor: pointer;
}

.auth-grid button:disabled,
.wizard-footer .primary:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.wizard-steps {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.wizard-steps button {
  border-radius: 999px;
  border: 1px solid rgba(15, 23, 42, 0.18);
  padding: 10px 18px;
  background: transparent;
  cursor: pointer;
}

.wizard-steps button.active {
  background: #7C3AED;
  color: #fff;
  border-color: #7C3AED;
}

.grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 16px;
}

.chip-option {
  border: 1px solid rgba(15, 23, 42, 0.12);
  border-radius: 16px;
  padding: 14px;
  display: flex;
  gap: 12px;
  cursor: pointer;
  background: rgba(255, 255, 255, 0.95);
}

.chip-option input {
  width: 18px;
  height: 18px;
  accent-color: #7C3AED;
}

.chip-option span {
  display: flex;
  flex-direction: column;
  gap: 4px;
  font-size: 0.95rem;
}

.chip-option small {
  color: rgba(15, 23, 42, 0.65);
  font-size: 0.85rem;
}

.allergen-row {
  border: 1px solid rgba(15, 23, 42, 0.12);
  border-radius: 16px;
  padding: 16px;
  display: flex;
  flex-direction: column;
  gap: 12px;
  background: rgba(255, 255, 255, 0.92);
  transition: border 0.2s ease, box-shadow 0.2s ease;
}

.allergen-row.active {
  border-color: #7C3AED;
  box-shadow: 0 0 0 2px rgba(124, 58, 237, 0.18);
}

.allergen-controls {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.allergen-controls input[type="range"] {
  width: 100%;
}

.override-section {
  border-top: 1px solid rgba(15, 23, 42, 0.1);
  padding-top: 12px;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.override-controls {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 12px;
}

.override-controls textarea {
  resize: vertical;
}

.risk-card {
  border-radius: 18px;
  padding: 20px;
  border: 1px solid rgba(15, 23, 42, 0.12);
  background: rgba(14, 165, 233, 0.08);
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.risk-card--medium {
  background: rgba(234, 179, 8, 0.18);
  border-color: rgba(202, 138, 4, 0.45);
}

.risk-card--high {
  background: rgba(239, 68, 68, 0.18);
  border-color: rgba(220, 38, 38, 0.45);
}

.risk-card header {
  display: flex;
  align-items: baseline;
  gap: 12px;
  flex-wrap: wrap;
}

.risk-label {
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.08em;
}

.risk-confidence {
  font-size: 0.85rem;
  color: rgba(15, 23, 42, 0.7);
}

.risk-content {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 16px;
}

.risk-content ul {
  list-style: disc;
  padding-left: 18px;
  font-size: 0.95rem;
}

.pill {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 4px 10px;
  border-radius: 999px;
  background: rgba(124, 58, 237, 0.1);
  color: #4C1D95;
  font-size: 0.85rem;
  font-weight: 600;
}

.strictness-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 16px;
  align-items: start;
}

.wizard-footer {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
  padding: 16px 0;
  border-top: 1px solid rgba(15, 23, 42, 0.1);
}

.wizard-footer .status {
  display: flex;
  gap: 12px;
  font-size: 0.95rem;
}

.wizard-footer .actions {
  display: flex;
  gap: 12px;
}

.primary,
.primary:visited {
  background: #7C3AED;
  color: #ffffff;
  border-radius: 999px;
  padding: 12px 24px;
  font-weight: 600;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  border: 1px solid transparent;
  transition: background 0.2s ease, transform 0.2s ease;
}

.primary:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.ghost,
.ghost:visited {
  background: transparent;
  color: inherit;
  border: 1px solid currentColor;
  border-radius: 999px;
  padding: 12px 24px;
  font-weight: 500;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  transition: background 0.2s ease, color 0.2s ease;
}

.primary:not(:disabled):hover {
  background: #4C1D95;
  transform: translateY(-1px);
}

.ghost:hover {
  background: rgba(124, 58, 237, 0.1);
  color: #7C3AED;
}

.home {
  display: flex;
  flex-direction: column;
  gap: 48px;
}

.hero {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.badge {
  display: inline-block;
  padding: 6px 12px;
  border-radius: 999px;
  background: rgba(124, 58, 237, 0.12);
  color: #4C1D95;
  font-size: 0.85rem;
  font-weight: 600;
  letter-spacing: 0.04em;
}

.hero h1 {
  font-size: clamp(2.25rem, 4vw, 3rem);
  line-height: 1.1;
}

.lead {
  font-size: 1.1rem;
  max-width: 48ch;
}

.hero-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  margin-top: 8px;
}

.home-grid {
  display: grid;
  gap: 18px;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
}

.home-grid article {
  padding: 20px;
  border-radius: 16px;
  border: 1px solid rgba(15, 23, 42, 0.12);
  background: rgba(15, 23, 42, 0.02);
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.home-grid h2 {
  font-size: 1.15rem;
}

.scan-page {
  display: flex;
  flex-direction: column;
  gap: 40px;
}

.scan-intro {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.scan-grid {
  display: grid;
  gap: 24px;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
}

.image-picker,
.ocr-result {
  padding: 24px;
  border-radius: 20px;
  border: 1px solid rgba(15, 23, 42, 0.1);
  background: rgba(255, 255, 255, 0.92);
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.image-picker header,
.ocr-result header {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.picker-body {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.picker-placeholder {
  border: 1px dashed rgba(124, 58, 237, 0.4);
  border-radius: 16px;
  padding: 32px 20px;
  text-align: center;
  color: rgba(15, 23, 42, 0.7);
  font-size: 0.95rem;
}

.picker-preview {
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(15, 23, 42, 0.12);
  background: #000;
  display: block;
}

.picker-preview img {
  display: block;
  width: 100%;
  height: auto;
}

.picker-actions {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
}

.ocr-body {
  min-height: 140px;
}

.placeholder {
  color: rgba(15, 23, 42, 0.7);
  font-size: 0.95rem;
}

.progress {
  display: flex;
  flex-direction: column;
  gap: 12px;
  font-weight: 500;
}

.spinner {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  border: 3px solid rgba(124, 58, 237, 0.2);
  border-top-color: #7C3AED;
  animation: spin 1s linear infinite;
}

.progress-bar {
  height: 10px;
  border-radius: 999px;
  background: rgba(124, 58, 237, 0.12);
  overflow: hidden;
}

.progress-bar__fill {
  height: 100%;
  background: #7C3AED;
  transition: width 0.2s ease;
}

.error,
.warning {
  display: flex;
  flex-direction: column;
  gap: 8px;
  font-size: 0.95rem;
}

.error {
  color: #b91c1c;
}

.warning strong {
  color: #92400e;
}

.success {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.success h3 {
  font-size: 1.1rem;
}

.chips {
  list-style: none;
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.chips li {
  border-radius: 999px;
  background: var(--chip-bg);
  color: #4C1D95;
  padding: 8px 14px;
  font-size: 0.95rem;
}

.chips--alert li {
  background: rgba(239, 68, 68, 0.12);
  color: #7f1d1d;
}

.metrics {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
  gap: 12px;
  padding: 12px;
  border-radius: 12px;
  border: 1px solid rgba(15, 23, 42, 0.12);
  background: rgba(15, 23, 42, 0.04);
}

.metrics span {
  display: block;
  font-size: 0.75rem;
  color: rgba(15, 23, 42, 0.65);
  text-transform: uppercase;
  letter-spacing: 0.08em;
}

.metrics strong {
  font-size: 1rem;
}

.traces {
  border-radius: 12px;
  padding: 16px;
  background: rgba(234, 179, 8, 0.15);
  border: 1px solid rgba(202, 138, 4, 0.4);
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.traces h4 {
  font-size: 0.95rem;
  font-weight: 600;
}

.traces ul {
  list-style: disc;
  padding-left: 18px;
  font-size: 0.95rem;
}

.raw-text summary {
  cursor: pointer;
  font-weight: 600;
}

.raw-text pre {
  margin-top: 12px;
  padding: 12px;
  border-radius: 12px;
  background: rgba(15, 23, 42, 0.05);
  font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas,
    "Liberation Mono", "Courier New", monospace;
  white-space: pre-wrap;
  line-height: 1.5;
}

/* Dark mode overrides for legacy components */
@media (prefers-color-scheme: dark) {
  html {
    color-scheme: dark;
  }

  .card,
  .chip-option,
  .allergen-row {
    background: rgba(15, 23, 42, 0.7);
    border-color: rgba(148, 163, 184, 0.2);
  }

  .profile-header button {
    border-color: rgba(148, 163, 184, 0.35);
  }

  .field input,
  .field textarea,
  .field select {
    background: rgba(17, 24, 39, 0.8);
    border-color: rgba(148, 163, 184, 0.3);
    color: var(--foreground);
  }

  .helper {
    color: rgba(226, 232, 240, 0.75);
  }

  .pill {
    background: rgba(94, 234, 212, 0.18);
    color: #a5f3fc;
  }

  .wizard-steps button {
    border-color: rgba(148, 163, 184, 0.35);
    color: rgba(226, 232, 240, 0.85);
  }

  .override-section {
    border-top-color: rgba(148, 163, 184, 0.25);
  }

  .risk-card {
    background: rgba(37, 99, 235, 0.22);
    border-color: rgba(59, 130, 246, 0.5);
  }

  .risk-card--medium {
    background: rgba(234, 179, 8, 0.28);
    border-color: rgba(202, 138, 4, 0.55);
  }

  .risk-card--high {
    background: rgba(239, 68, 68, 0.28);
    border-color: rgba(248, 113, 113, 0.6);
  }

  .risk-confidence {
    color: rgba(226, 232, 240, 0.75);
  }

  .image-picker,
  .ocr-result {
    background: rgba(15, 23, 42, 0.65);
    border-color: rgba(148, 163, 184, 0.2);
  }

  .picker-placeholder {
    border-color: rgba(94, 234, 212, 0.4);
    color: rgba(226, 232, 240, 0.8);
  }

  .chips li {
    color: #f8fafc;
  }

  .raw-text pre {
    background: rgba(15, 23, 42, 0.9);
  }

  .metrics {
    border-color: rgba(148, 163, 184, 0.25);
    background: rgba(148, 163, 184, 0.12);
  }

  .metrics span {
    color: rgba(226, 232, 240, 0.7);
  }

  .chips--alert li {
    background: rgba(248, 113, 113, 0.25);
    color: #fecaca;
  }
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

